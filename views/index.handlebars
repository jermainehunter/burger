<div class="jumbotron">
  <h1>CREATE OR DEVOUR A BURGER!</h1>
</div>
{{!-- <img src="../public/images/header.png"> --}}


<form class="create-form">
  <div class="form-group">
    <h2 class="alert alert-secondary" role="alert">Create a Burger!</h2>
    <label class="burgername" for="ca">Burger Name:</label>
    <input required type="text" id="burger-name" name="name">
    <button class="btn btn-primary btn-lg"type="submit button">Add Burger</button>
  </div>
</form>

<hr>
<h2 class="alert alert-info" role="alert" >Burgers that have yet to be devoured!</h2>
 
<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/unless}}
  {{/each}}
</ul>
<hr>
<h2 class="alert alert-danger" role="alert">Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/if}}
  {{/each}}
</ul>
<hr>
